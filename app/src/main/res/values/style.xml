<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorAccent">@color/purple_my</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="MyCalendar" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:colorControlActivated">@color/purple_my</item>
    </style>

    <style name="MyCalendarText" parent="TextAppearance.AppCompat">
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="MySwitch" parent="Theme.MaterialComponents">
        <item name="colorOnSurface">@color/grey_light</item>
        <item name="colorSecondary">@color/purple_my</item>
    </style>
    <style name="MyText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>
</resources>